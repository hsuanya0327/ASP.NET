            @Html.LabelFor(model => model.sGender,"性別", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="font-size:12pt">男</span>
                @Html.RadioButtonFor(m => m.sGender, "男")
